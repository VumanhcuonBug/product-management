//- ke thua layouts default vao trang san pham
extends ../../layouts/default.pug
//- nhung cac file tu folder mixin
include ../../mixins/box-head.pug
block main
  .container.my-3 
    .row  
      .col-12 
        //-nhung box-head cua mixins 
        +box-head("danh sach san pham") 
    .row
      //-lap qua cac item va load vao view 
      each item in products 
        .col-4.mb-3 
          .product-item 
            .inner-image 
              img(src=item.thumbnail
                  alt=item.title
              )
            .inner-content 
              h3.inner-title #{item.title}
                .inner-price-new #{item.priceNew}$
                .inner-price-old #{item.price}$
                .inner-discount #{item.discountPercentage}
      
      